DJANGO_SETTINGS_MODULE=hive.settings.dev
DJANGO_SECRET_KEY=replace-with-strong-secret
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Database — DEV_ONLY: sqlite3; DOCKER_TARGET: postgresql
DJANGO_DB_ENGINE=django.db.backends.sqlite3
DJANGO_DB_NAME=db.sqlite3
DJANGO_DB_USER=
DJANGO_DB_PASSWORD=
DJANGO_DB_HOST=
DJANGO_DB_PORT=

DRF_PAGE_SIZE=20
INVITATION_TTL_HOURS=168
JWT_ACCESS_MINUTES=15
JWT_REFRESH_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=False
JWT_BLACKLIST_AFTER_ROTATION=True

CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000

SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Email — DEV_ONLY: console; DOCKER_TARGET: smtp
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
DEFAULT_FROM_EMAIL=noreply@hive.local

# Cache — DEV_ONLY: locmem; DOCKER_TARGET: redis
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_URL=hive-locmem
CACHE_TIMEOUT=300

# Celery — DEV_ONLY: eager; DOCKER_TARGET: redis broker
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=
CELERY_TASK_ALWAYS_EAGER=True

# Feature flags (Priority 3 features)
FEATURE_COMMENTS_ENABLED=True
FEATURE_REACTIONS_ENABLED=True
FEATURE_DOCUMENTS_ENABLED=True
FEATURE_GALLERY_ENABLED=True

# Logging
DJANGO_LOG_LEVEL=INFO

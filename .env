# =============================================================================
# Docker Compose Environment Variables
# Copy this file to .env and adjust values as needed.
# =============================================================================

# --- PostgreSQL ---
POSTGRES_DB=hive
POSTGRES_USER=hive
POSTGRES_PASSWORD=hive

# --- Django ---
DJANGO_SETTINGS_MODULE=hive.settings.dev
DJANGO_SECRET_KEY=change-me-to-a-strong-random-value
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend,proxy
DJANGO_CSRF_TRUSTED_ORIGINS=https://localhost,https://127.0.0.1

# CORS (dev: allow all; prod: set explicit origins)
CORS_ALLOW_ALL_ORIGINS=True
# CORS_ALLOWED_ORIGINS=https://localhost

# --- Ports (host mapping) ---
HTTPS_PORT=443
HTTP_PORT=80

# --- JWT ---
JWT_ACCESS_MINUTES=15
JWT_REFRESH_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# --- Email (dev: console) ---
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# --- Logging ---
DJANGO_LOG_LEVEL=INFO
